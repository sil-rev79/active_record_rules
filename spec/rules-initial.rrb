async rule: greet people who are greetable
  Salutation(<greeting>)
  Person(<name>, greetable = true)
on match
  push("#{greeting}, #{name}")
on unmatch
  delete("#{greeting}, #{name}")


async rule: Farewell People
  Salutation(
    <farewell>
  )
  Person(
    <name>,
    farewellable = true
  )
on unmatch
  push("#{farewell}, #{name}")